<% layout('layouts/boilerplate') %>

<div class="row">
   <h1 class="text-center">Edit Campground</h1>
   <div class="col-6 offset-3">
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" novalidate class="validated-form">
         <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>" required>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="url" name="campground[image]" id="image" value="<%= camp.image %>" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a valid URL.</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
               <span class="input-group-text">â‚¹</span>
               <input class="form-control" type="text" name="campground[price]" id="price" value="<%= camp.price %>" required>
            </div>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= camp.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <button class="btn btn-success">Update Campground</button>
         </div>
      </form>
      <div class="mb-3">
         <a href="/campgrounds/<%= camp._id %>">Back</a>
      </div>
   </div>
</div>