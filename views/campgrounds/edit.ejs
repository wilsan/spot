<% layout('layouts/boilerplate') %>

<div class="row mt-3">
   <h1 class="text-center">Edit Campground</h1>
   <div class="col-6 offset-3">
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
         <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>" required>
            <div class="form-text">format: Landmark(optional), Locality, District, State</div>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
               <span class="input-group-text">â‚¹</span>
               <input class="form-control" type="text" name="campground[price]" id="price" value="<%= camp.price %>" required>
            </div>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= camp.description %></textarea>
            <div class="valid-feedback">Looks good!</div>
         </div>
         <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Add More Images</label>
            <input class="form-control" type="file" id="formFileMultiple" multiple name="image">
         </div>

         <div class="mb-3">
            <label class="form-label" for="">Uploaded Images</label>
            <div class="row row-cols-2 gy-3">
               <% camp.images.forEach(function (img, i) { %>
               <div class="col">
                  <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                  <div class="form-check">
                     <input class="form-check-input" name="deleteImages[]" type="checkbox" value="<%= img.filename %>" id="image-<%= i %>">
                     <label class="form-check-label" for="image-<%= i %>">
                        Select to delete
                     </label>
                  </div>
               </div>
               <% }) %>
            </div>
         </div>

         <div class="mb-3">
            <button class="btn btn-success">Update Campground</button>
         </div>
      </form>
      <div class="mb-3">
         <a href="/campgrounds/<%= camp._id %>">Back</a>
      </div>
   </div>
</div>