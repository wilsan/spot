<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<div class="container mt-4">
   <h1 class="text-center mb-4">All Campgrounds</h1>

   <% for (let camp of camps) { %>
   <div class="card mb-3">
      <div class="row">
         <div class="col-lg-4">
            <% if (camp.images.length) { %>
            <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
            <% } else { %>
            <img class="img-fluid" src="https://res.cloudinary.com/dd15gpoln/image/upload/v1656516058/Spot/xbwb8ex5thhxqff5lmum.jpg" alt="">
            <% } %>
         </div>

         <div class="col-lg-8">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text">
               <small class="text-muted"><%= camp.location %></small>
            </p>
            <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
         </div>
      </div>
   </div>
   <% } %>
</div>

<script>
   const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
   const camps = '<%- JSON.stringify({features: camps}) %>';
</script>

<script src="/javascripts/clusterMap.js"></script>