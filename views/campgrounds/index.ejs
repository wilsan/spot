<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<div class="container-fluid p-5">
   <h1 class="text-center mb-4">All Campgrounds</h1>

   <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
      <% for (let camp of camps) { %>
      <div class="col">
         <div class="card rounded-1 shadow-sm mb-3">
            <% if (camp.images.length) { %>
            <img class="img-fluid rounded-top-1" src="<%= camp.images[0].url %>" alt="">
            <% } else { %>
            <img class="img-fluid rounded-top-1" src="https://res.cloudinary.com/dd15gpoln/image/upload/v1656516058/Spot/xbwb8ex5thhxqff5lmum.jpg" alt="">
            <% } %>

            <div class="card-body">
               <h5 class="card-title"><%= camp.title %></h5>
               <p class="card-text"><%= camp.description %></p>
               <p class="card-text">
                  <small class="text-muted"><%= camp.location %></small>
               </p>
               <a href="campgrounds/<%= camp._id %>" class="btn btn-outline-primary">View <%= camp.title %></a>
            </div>
         </div>
      </div>
      <% } %>
   </div>
</div>

<script>
   const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
   const camps = '<%- JSON.stringify({features: camps}) %>';
</script>

<script src="/javascripts/clusterMap.js"></script>