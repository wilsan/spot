<% layout('layouts/boilerplate') %>

<div class="container mt-3">
   <h1 class="text-center mb-3">Register</h1>
   <div class="row d-flex justify-content-center">
      <div class="col-md-6">
         <div class="card shadow">
            <div class="card-body">
               <form action="/register" method="post" class="validated-form" novalidate>
                  <div class="my-3">
                     <label class="form-label" for="username">Username</label>
                     <input class="form-control" type="text" name="username" id="username" required minlength="6" autofocus>
                     <div id="error-username" class="validation-error"></div>
                  </div>
                  <div class="mb-3">
                     <label class="form-label" for="email">Email</label>
                     <input class="form-control" type="email" name="email" id="email" required pattern="^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$">
                     <div id="error-email" class="validation-error"></div>
                  </div>
                  <div class="mb-4">
                     <label class="form-label" for="password">Password</label>
                     <input class="form-control" type="password" name="password" id="password" required minlength="6">
                     <div id="error-password" class="validation-error"></div>
                  </div>
                  <div class="d-grid">
                     <button class="btn btn-success">Register</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

<script src="/javascripts/clientSideValidation.js"></script>